{
  "name": "plp-express-ssr",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --watch server.bundle.js --exec \"npm run build && node server.bundle.js\"",
    "build": "esbuild src/client.jsx --bundle --outfile=public/client.js --platform=browser --sourcemap && esbuild src/server-entry.jsx --bundle --outfile=server.bundle.js --platform=node --target=node18 --sourcemap",
    "start": "node server.bundle.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.4",
    "nodemon": "^2.0.22"
  }
}